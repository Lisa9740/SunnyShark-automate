<form action="/save" method="post" class="lato-font" id="create-form">

  <div class="form-group">
    <div class="row">
      <div class="col">
        <label for=""> Marque</label>
        <input class="form-control" type="text" name="marque"
          required />
      </div>
      <div class="col">
        <label for=""> Modèle</label>

        <input class="form-control" type="text" name="modele" required>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col">
        <label for=""> Date de mise en service</label>

        <input class="form-control" type="date" name="date_service" required />
      </div>
      <div class="col">
        <label for=""> Lieu </label>

        <input class="form-control" type="number" name="lieu" required />
      </div>
    </div>

  </div>

  <div class="form-group">

  </div>
  <div class="form-group">
    <label for=""> Bassin affecté</label>

    <input class="form-control" type="text" name="bassin" required />
  </div>
  <div class="form-group">
    <label for=""> Numéro de série</label>

    <input class="form-control" type="text" name="numeroserie" required />
  </div>

  <div class="form-group">
    <label for=""> Description / commentaire</label>

    <textarea class="form-control" type="text" name="description" required ></textarea>
  </div>
  <input class="btn btn-success" type="submit" value="Valider" />

</form>